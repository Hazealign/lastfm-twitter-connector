{
  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Run / Debug Program",
      "type": "pwa-node",
      "program": "${workspaceFolder}/src/index.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/opt/homebrew/bin/deno",
      "runtimeArgs": [
        "run",
        "--allow-net",
        "--allow-read",
        "--config",
        "deno.jsonc",
        "--inspect",
        "--allow-all"
      ],
      "args": [
        "-d", 
        "-l", 
        "Debug", 
        "config.toml"
      ],
      "outputCapture": "std",
      "attachSimplePort": 9229
    }
  ]
}